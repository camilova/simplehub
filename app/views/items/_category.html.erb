<% classes = "list-group-item list-group-item-action no-wrap #{ 'active' if active }" %>
<% border_style = if @admin then 'border-right: none' else '' end %>
<%= link_to items_path(category: category.name),
  id: "category-#{category.id}",
  style: border_style,
  class: classes do %>
  <%= category.name %>
<% end %>
<% if @admin %>
  <%= link_to edit_category_path(category),
    id: "edit-category-#{category.id}",
    title: t('.edit'),
    remote: true,
    style: 'border-left: none',
    class: classes + ' px-2' do %>
    <%= fa_icon 'pencil' %>
  <% end %>
<% end %>
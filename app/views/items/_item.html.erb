<% orders_detail_div_id = "orders_detail#{item.id}" %>
<li class="list-group-item list-group-item-action">
  <div class="d-flex w-100 justify-content-between align-items-center clickable">
    <a
      id="item_details_header_<%= item.id %>%"
      class="text-decoration-none"
      href="#<%= orders_detail_div_id %>"
      data-toggle="collapse" role="button" 
      aria-expanded="false" aria-controls="Item Orders Details">
      <h5 class="mb-1"><%= item.title %></h5>
    </a>
    <span class="badge badge-primary badge-pill"><%= item.orders.actives.count %></span>
  </div>
  <p class="mb-1 clickable"><%= item.description %></p>
  <div class="collapse mt-3" id="<%= orders_detail_div_id %>">
    <div class="card card-body">
      <ul class="list-group list-group-flush">
        <% item.orders.each do |order| %>
          <%= render partial: 'order', locals: { order: order } %>
        <% end %>
      </ul>
    </div>
  </div>
</li>
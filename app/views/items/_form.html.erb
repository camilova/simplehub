<div class="modal fade" id="item_form_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t((item.persisted?? '.edit' : (item.main?? '.new' : '.new_subitem'))) %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for item, html: { id: "item_form" }, remote: true do |f| %>
          <%= f.error_notification %>
          <%= hidden_field :item, :item_id, value: item.item.id if item.item.present? %>
          <%= f.input :title, as: :text %>
          <%= f.input :description, as: :text %>
          <%= f.input :deprecated unless item.main? %>
          <% if item.main? %>
            <%= f.association :categories, collection: Category.selectable, as: :check_boxes %>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <% if item.persisted? %>
          <%= link_to item_path(item), class: 'btn btn-danger mr-auto', 
            data: { confirm: t('.destroy_confirm') }, 
            title: t('.destroy_title'), method: :delete, remote: true do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
        <button form="item_form" type="submit" class="btn btn-success"><%= t('save') %></button>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t('cancel') %></button>
      </div>
    </div>
  </div>
</div>
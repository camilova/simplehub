<li class="list-group-item <%= 'text-line-through text-secondary bg-light' if order.deprecated? %>">
  <div class="d-flex w-100 justify-content-between">
    <h6 class="mb-1"><%= order.description %></h6>
    <% if order.deprecated? %>
      <small class="ml-auto mr-2">
        <span class="badge badge-secondary badge-pill"><%= "En Desuso" %></span>
      </small>
    <% end %>
    <% published_at = order.published_at.presence || Date.today %>
    <small title="<%= l(published_at, format: :long) %>">
      <%= l(published_at, format: :short) %>
    </small>
  </div>
  <ul class="mt-2">
    <% order.sources.each do |source| %>
      <%= render partial: 'source', locals: { source: source, order: order } %>
    <% end %>
  </ul>
</li>
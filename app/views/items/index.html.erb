<div class="container-fluid">
  <div class="row">
    <div class="col d-flex flex-column" style="max-height: 100vh">
      <div class="row pr-3" style="height:4vh;z-index:2">
        <div class="col-auto ml-auto">
          <small>
            <%= link_to '#' do %>
              <%= fa_icon 'user' %>&nbsp;<%= t('.login') %>
            <% end %>
          </small>
        </div>
      </div>
      <div class="row pt-1 bg-warning" style="margin-top:-4vh;z-index:1">
        <div class="col text-center">
          <h3><%= t('.title') %></h3>
        </div>
      </div>
      <div class="row pb-1 bg-warning">
        <div class="col text-center">
          <h6><%= t('.subtitle') %></h6>
        </div>
      </div>
      <div class="row my-2">
        <div class="col-auto m-auto">
          <div class="list-group list-group-horizontal">
            <% @categories.each do |category| %>
              <% if category.items.any? %>
                <% active = category == @category %>
                <%= render partial: 'category', locals: { category: category, active: active } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row flex-grow-1 justify-content-center overflow-auto">
        <div class="col-xs-12 col-sm-11 col-xl-7">
          <ul class="list-group" id="items_list">
            <% @items.each do |item| %>
              <%= render partial: 'item', locals: { item: item } %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
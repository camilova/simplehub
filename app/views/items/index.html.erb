<div class="container-fluid">
  <div class="row">
    <div class="col d-flex flex-column" style="max-height: 100vh">
      <div class="row">
        <div class="col text-center py-1 mb-2 bg-warning">
          <h3>COVID-19 HUB</h3>
          <h6>GUÍA RÁPIDA DE PRÁCTICAS Y PROTOCOLOS</h6>
        </div>
      </div>
      <div class="row flex-grow-1 justify-content-center overflow-auto">
        <div class="col-xs-12 col-sm-10 col-xl-7">
          <ul class="list-group">
            <% @items.each do |item| %>
              <% orders_detail_div_id = "orders_detail#{item.id}" %>
              <li class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between align-items-center">
                  <a
                    class="text-decoration-none"
                    href="#<%= orders_detail_div_id %>"
                    data-toggle="collapse" role="button" 
                    aria-expanded="false" aria-controls="Item Orders Details">
                    <h5 class="mb-1"><%= item.title %></h5>
                  </a>
                  <span class="badge badge-primary badge-pill"><%= item.orders.actives.count %></span>
                </div>
                <p class="mb-1"><%= item.description %></p>
                <div class="collapse mt-3" id="<%= orders_detail_div_id %>">
                  <div class="card card-body">
                    <%= render partial: 'orders_list', locals: { item: item } %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade login" id="item_form_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="row">
                <div class="col">
                  <h4><%= t('.title') %></h4>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="alert alert-danger errors d-none" role="alert"></div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= simple_form_for(resource,
                    as: resource_name, 
                    remote: true,
                    html: { class: 'modal-response' },
                    url: session_path(resource_name)) do |f| %>
                    <div class="form-row">
                      <div class="col">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" } %>
                        <%= f.input :password,
                                  required: false,
                                  input_html: { autocomplete: "current-password", autofocus: true } %>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="btn-group ml-auto" role="group">
                        <%= f.button :submit, t('.log_in'), class: "btn btn-success px-4" %>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t('cancel') %></button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col text-right">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

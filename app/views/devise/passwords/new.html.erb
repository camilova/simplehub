<div class="container">
  <div class="row">
    <div class="col-xl-5 col-md-8 col-sm-12 m-auto mt-4">
      <h2><%= t('.title') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('.send'), class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
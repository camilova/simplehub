<div class="modal fade" id="source_form_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t((@category.persisted?? '.edit' : '.new')) %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @category, html: { id: "category_form" }, remote: true do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
        <% end %>
      </div>
      <div class="modal-footer">
        <% if @category.persisted? %>
          <%= link_to category_path(@category), class: 'btn btn-danger mr-auto', 
            data: { confirm: t('.destroy_confirm', category: @category.name) }, 
            title: t('.destroy_title'), method: :delete, remote: true do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
        <button form="category_form" type="submit" class="btn btn-success"><%= t('save') %></button>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t('cancel') %></button>
      </div>
    </div>
  </div>
</div>
